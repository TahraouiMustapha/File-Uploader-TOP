generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userid  Int @id @default(autoincrement())
  username String @unique
  password String
  folders Folder[]
  files File[]
}


model Folder {
  folderid Int @id @default(autoincrement())
  name String 
  size Int?  
  createdDate DateTime @updatedAt

  owner User @relation(fields: [userid], references: [userid])
  userid Int

  files File[]

  // self realtion
  children Folder[] @relation("parentFolder")
  parentid Int?
  parent Folder? @relation("parentFolder", fields: [parentid], references: [folderid]) 
}

model File {
  fileid Int @id @default(autoincrement())
  name String
  size Int?
  createdDate DateTime @updatedAt

  owner User @relation(fields: [userid], references: [userid])
  userid Int

  parentFolder Folder? @relation(fields: [folderid], references: [folderid])
  folderid Int?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}