<div class="header">
    <a href="/" class="logo">File Uploader</a>

    <%if(locals.user) {%>
        <a href="/users/log-out" class="logOutLogo">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path  d="M23,12L19,8V11H10V13H19V16M1,18V6C1,4.89 1.9,4 3,4H15A2,2 0 0,1 17,6V9H15V6H3V18H15V15H17V18A2,2 0 0,1 15,20H3A2,2 0 0,1 1,18Z" /></svg>
                <div class="tooltip">Logout</div>
        </a>
        <script>
            const logout = document.querySelector('.logOutLogo')
            const tooltip = document.querySelector('.tooltip')

            console.log(logout, tooltip)
            logout.addEventListener('mouseover', ()=> {
                tooltip.style.opacity = '1'
            })

            logout.addEventListener('mouseout', ()=> {
                tooltip.style.opacity = '0'
            })
        </script>
    <%} else {%>       
        <div class="authbtns">
            <a href="/users/sign-up">Sign up</a>
            <a href="/users/log-in">Log in</a>
        </div>
    <%}%>
</div>