<html>
    <head>
        <link rel="stylesheet" href="/styles/global.css">
        <link rel="stylesheet" href="/styles/authforms.css">
        <title><%=locals.title || "Sign Up"%>  </title>
    </head>

    <body>
        <%const username = locals.errors?.find(field => field.path === 'username')%>
        <%const password = locals.errors?.find(field => field.path === 'password')%>
        <%const confirmPass = locals.errors?.find(field => field.path === 'confirmPassword')%>

        <section class="main">
            <aside class="intro-container">
                <div class="logo-container">
                    <div class="logo">
                        <img src="/assets/icons/logo-full.svg" alt="logo">
                    </div>
                </div>

                <div class="intro">
                    <p class="title">Manage your files the best way</p>
                    <p class="caption">Awesome , we've created the perfect project to show you how good we are at our work</p>
                </div>

                <div class="big-files-logo">
                    <img src="/assets/images/files.png" alt="big icon"></img>
                </div>
            </aside>

            <div class="auth-container">
                <div class="auth">
                    <form method="post" action="/users/sign-up">
                        <h2 class="title">Create Account</h2>
                        <p>
                            <label for="username">Uersname*</label>
                            <input type="email" 
                            id="username" 
                            name="username"
                            placeholder="Enter your email">
                        </p>
                        <%if(username){ %>
                            <script>
                                const emailP = document.querySelector('form p:has(input[name=\'username\'])') 
                                emailP.classList.add('invalid-input')
                            </script>
                        <%}%>
                        <p>
                            <label for="password">Password*</label>
                            <input type="password" 
                            id="password" 
                            name="password"
                            placeholder="Enter your password">
                        </p>

                        <p>
                            <label for="confirmPassword">Confirm Password*</label>
                            <input type="password" 
                            id="confirmPassword" 
                            name="confirmPassword"
                            placeholder="Confirm your password">
                        </p>

                        <%if(confirmPass || password) {%>
                            <script>
                                const passwordP = document.querySelector('form p:has(input[name=\'password\'])') 
                                const confirmPass = document.querySelector('form p:has(input[name=\'confirmPassword\'])') 

                                confirmPass.classList.add('invalid-input')
                                passwordP.classList.add('invalid-input')

                            </script>
                        <%}%>

                        <%if(locals.errors) {%>
                            <%-include("partials/errors")%>
                        <%}%>
                        <button type="submit" class="formBtn">Create Account</button>
                        <p>
                            Already have an account ? <a href="/users/log-in">Log in</a>
                        </p>
                    </form>
                </div>
            </div>
        </section>

        <script>
            const inputs = Array.from(document.querySelectorAll('.auth form input'));
            
            inputs.forEach(input=> {
                input.addEventListener('input', (e)=> {
                    e.target.parentElement.classList.remove('invalid-input')
                })
            })
        </script>

    </body>
</html>